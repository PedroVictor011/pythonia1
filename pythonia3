
produtos = {}

print("ðŸ›’ Cadastro de Produtos")
print("----------------------")


for i in range(1, 6):
    nome = input(f"Digite o nome do produto {i}: ")
    preco = float(input(f"Digite o preÃ§o do produto {i} (use ponto para decimais): R$ "))
    produtos[nome] = preco  


total = sum(produtos.values())

print("\nðŸ§¾ Produtos cadastrados:")
for nome, preco in produtos.items():
    print(f"- {nome}: R${preco:.2f}")

print(f"\nðŸ’° Valor total da compra: R${total:.2f}")
